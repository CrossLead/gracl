{
  "compilerOptions": {
    "target": "es2015",
    "module": "commonjs",
    "moduleResolution" : "node",
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "declaration": true,
    "removeComments": false,
    "noLib": false,
    "outDir": "./dist/es2015/",
    "inlineSourceMap": true,
    "forceConsistentCasingInFileNames": true
  },
  "exclude": [
    "node_modules",
    "scripts",
    "typings",
    "dist"
  ]
}
