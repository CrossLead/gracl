{
  "compilerOptions": {
    "target": "es6",
    "module": "es2015",
    "declaration": false,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "removeComments": true,
    "noLib": false,
    "outDir": "./dist/es6/",
    "inlineSourceMap": true
  },
  "exclude": [
    "node_modules",
    "scripts",
    "typings",
    "dist"
  ]
}
